<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="PERSISTENCE" transaction-type="RESOURCE_LOCAL">
        <class>gestion.etudiant.loimmobilier.model.ContratLocation</class>
        <class>gestion.etudiant.loimmobilier.model.UniteLocation</class>
        <class>gestion.etudiant.loimmobilier.model.Utilisateur</class>
        <class>gestion.etudiant.loimmobilier.model.Immeuble</class>
        <class>gestion.etudiant.loimmobilier.model.Paiement</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ExamImmeublier"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="passer"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

        </properties>
    </persistence-unit>
</persistence>
